{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "MSVC",
			"type": "cppvsdbg",
			"request": "launch",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"preLaunchTask": "Build: Debug",
			"program": "${workspaceFolder}/build/x86_64-pc-windows-msvc_Debug/01_triangles.exe",
			"envFile": "${workspaceFolder}/build/x86_64-pc-windows-msvc_Debug/run.env"
		},
		{
			"name": "LLDB",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/build/Debug/01_triangles",
			"args": [],
			"stopOnEntry": false,
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Build: Debug",
			"osx": {
				"program": "${workspaceFolder}/build/x86_64-apple-darwin_Debug/01_triangles"
			}
		},
		{
			"name": "LLDB (arm64)",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/build/Debug/01_triangles",
			"args": [],
			"stopOnEntry": false,
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Build: Debug",
			"osx": {
				"program": "${workspaceFolder}/build/arm64-apple-darwin_Debug/01_hello_triangles"
			}
		},
		{
			"name": "GDB",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/Debug/01_triangles",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Build: Debug",
			"externalConsole": false,
			"internalConsoleOptions": "neverOpen",
			"windows": {
				"MIMode": "gdb",
				"miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
				"program": "${workspaceFolder}/build/x86_64-w64-mingw32_Debug/01_triangles.exe",
				"envFile": "${workspaceFolder}/build/x86_64-w64-mingw32_Debug/run.env"
			},
			"linux": {
				"MIMode": "gdb",
				"miDebuggerPath": "/usr/bin/gdb",
				"program": "${workspaceRoot}/build/x86_64-pc-linux-gnu_Debug/01_triangles",
				"envFile": "${workspaceFolder}/build/x86_64-pc-linux-gnu_Debug/run.env"
			}
		}
	]
}