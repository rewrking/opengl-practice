{
	"name": "opengl-practice",
	"version": "1.0.0",
	"defaultConfigurations": [
		"Debug",
		"Release"
	],
	"externalDependencies": {
		"assimp": {
			"kind": "git",
			"repository": "git@github.com:assimp/assimp.git",
			"tag": "v5.3.1"
		},
		"fmt": {
			"kind": "git",
			"repository": "git@github.com:fmtlib/fmt.git",
			"tag": "9.0.0"
		},
		"glfw": {
			"kind": "git",
			"repository": "git@github.com:glfw/glfw.git",
			"tag": "3.3.8"
		},
		"glm": {
			"kind": "git",
			"repository": "git@github.com:g-truc/glm.git"
		},
		"spdlog": {
			"kind": "git",
			"repository": "git@github.com:gabime/spdlog.git",
			"tag": "v1.11.0"
		}
	},
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"buildSuffix": "opengl",
			"cppStandard": "c++20",
			"warningsPreset": "strictPedantic",
			"warnings[toolchain:apple-llvm]": [
				"no-deprecated-declarations"
			],
			"precompiledHeader": "src/PCH.hpp",
			"treatWarningsAsErrors": true,
			"runtimeTypeInformation": false,
			"threads": true,
			"defines[:debug]": [
				"_DEBUG"
			],
			"defines[:macos]": [
				"GL_SILENCE_DEPRECATION"
			],
			"includeDirs": [
				"${external:fmt}/include",
				"${external:glfw}/include",
				"${external:spdlog}/include",
				"${external:glm}",
				"vendor/stb/include",
				"vendor/glad/include",
				"src"
			],
			"libDirs": [
				"${externalBuild:spdlog}",
				"${externalBuild:glfw}/src",
				"${externalBuild:glm}/glm",
				"${buildDir}/vendor/glad"
			],
			"staticLinks": [
				"glad-s",
				"glfw3",
				"glm_static"
			],
			"staticLinks[:!debug]": [
				"spdlog"
			],
			"staticLinks[:debug]": [
				"spdlogd"
			],
			"links[:windows]": [
				"opengl32",
				"dwmapi"
			],
			"links[:linux]": [
				"GL",
				"glfw3",
				"X11"
			],
			"appleFrameworks": [
				"Cocoa",
				"OpenGL",
				"IOKit"
			],
			"windowsApplicationIcon": "platform/windows/app.ico",
			"windowsApplicationManifest": "platform/windows/app.manifest"
		}
	},
	"targets": {
		"glad": {
			"kind": "cmakeProject",
			"location": "vendor/glad",
			"recheck": false,
			"rebuild": false,
			"defines[:linux]": [
				"CMAKE_POSITION_INDEPENDENT_CODE=ON"
			]
		},
		"assimp": {
			"kind": "cmakeProject",
			"location": "${external:assimp}",
			"recheck": false,
			"rebuild": false,
			"defines": [
				"BUILD_STATIC_LIBS=OFF",
				"BUILD_SHARED_LIBS=ON"
			]
		},
		"spdlog": {
			"kind": "cmakeProject",
			"location": "${external:spdlog}",
			"recheck": false,
			"rebuild": false,
			"targets": "spdlog"
		},
		"glm": {
			"kind": "cmakeProject",
			"location": "${external:glm}",
			"targets": "glm/all",
			"defines": [
				"BUILD_STATIC_LIBS=ON",
				"BUILD_SHARED_LIBS=OFF"
			],
			"recheck": false
		},
		"glfw": {
			"kind": "cmakeProject",
			"location": "${external:glfw}",
			"targets": "glfw",
			"recheck": false
		},
		"opengl-practice": {
			"kind": "executable",
			"files": [
				"src/**.cpp"
			],
			"defaultRunArguments": [
				"12"
			]
		}
	},
	"distribution": {
		"GLFWApp": {
			"kind": "bundle",
			"buildTargets": "*",
			"macosBundle": {
				"type": "app",
				"infoPropertyList": "platform/macos/Info.plist.json",
				"entitlementsPropertyList": "platform/macos/Entitlements.plist.json",
				"icon": "platform/glfw-logo.png"
			},
			"linuxDesktopEntry": {
				"template": "platform/linux/app.desktop",
				"icon": "platform/glfw-logo.png"
			}
		},
		"GLFWApp.dmg": {
			"kind": "macosDiskImage",
			"pathbarVisible": false,
			"textSize": 12,
			"iconSize": 80,
			"background": {
				"1x": "platform/macos/dmg-background.png",
				"2x": "platform/macos/dmg-background@2x.png"
			},
			"size": {
				"width": 512,
				"height": 342
			},
			"positions": {
				"GLFWApp": {
					"x": 120,
					"y": 188
				},
				"Applications": {
					"x": 392,
					"y": 188
				}
			}
		}
	}
}