{
	"name": "chalet-example-glfw",
	"version": "1.0.0",
	"externalDependencies": {
		"glfw": {
			"kind": "git",
			"repository": "git@github.com:glfw/glfw.git",
			"tag": "3.3.8"
		},
		"glm": {
			"kind": "git",
			"repository": "git@github.com:g-truc/glm.git"
		}
	},
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"buildSuffix": "opengl",
			"cppStandard": "c++20",
			"warningsPreset": "strictPedantic",
			"precompiledHeader": "src/PCH.hpp",
			"treatWarningsAsErrors": true,
			"runtimeTypeInformation": false,
			"threads": true,
			"defines[:debug]": [
				"_DEBUG"
			],
			"defines[:macos]": [
				"GL_SILENCE_DEPRECATION"
			],
			"includeDirs": [
				"src",
				"vendor/glad/include",
				"${external:glfw}/include",
				"${external:glm}"
			],
			"libDirs": [
				"${buildDir}/vendor/glad",
				"${externalBuild:glfw}/src",
				"${externalBuild:glm}/glm"
			],
			"staticLinks": [
				"glad-s",
				"glfw3",
				"glm_static"
			],
			"links[:windows]": [
				"opengl32",
				"dwmapi"
			],
			"links[:linux]": [
				"GL",
				"glfw3",
				"X11"
			],
			"macosFrameworks": [
				"Cocoa",
				"OpenGL",
				"IOKit"
			],
			"windowsSubSystem[:!debug]": "windows",
			"windowsApplicationIcon": "platform/windows/app.ico",
			"windowsApplicationManifest": "platform/windows/app.manifest"
		},
		"files": [
			"src/Examples/${name}.cpp",
			"src/Core/**.cpp"
		]
	},
	"targets": {
		"glad": {
			"kind": "cmakeProject",
			"location": "vendor/glad",
			"recheck": false,
			"rebuild": false,
			"defines[:linux]": [
				"CMAKE_POSITION_INDEPENDENT_CODE=ON"
			]
		},
		"glm": {
			"kind": "cmakeProject",
			"location": "${external:glm}",
			"targets": "glm/all",
			"defines": [
				"BUILD_STATIC_LIBS=ON",
				"BUILD_SHARED_LIBS=OFF"
			],
			"recheck": false
		},
		"glfw": {
			"kind": "cmakeProject",
			"location": "${external:glfw}",
			"targets": "glfw",
			"recheck": false
		},
		"00_hello_window": {
			"kind": "executable"
		},
		"01_hello_triangles": {
			"kind": "executable"
		}
	},
	"distribution": {
		"GLFWApp": {
			"kind": "bundle",
			"buildTargets": "*",
			"macosBundle": {
				"type": "app",
				"infoPropertyList": "platform/macos/Info.plist.json",
				"entitlementsPropertyList": "platform/macos/Entitlements.plist.json",
				"icon": "platform/glfw-logo.png"
			},
			"linuxDesktopEntry": {
				"template": "platform/linux/app.desktop",
				"icon": "platform/glfw-logo.png"
			}
		},
		"GLFWApp.dmg": {
			"kind": "macosDiskImage",
			"pathbarVisible": false,
			"textSize": 12,
			"iconSize": 80,
			"background": {
				"1x": "platform/macos/dmg-background.png",
				"2x": "platform/macos/dmg-background@2x.png"
			},
			"size": {
				"width": 512,
				"height": 342
			},
			"positions": {
				"GLFWApp": {
					"x": 120,
					"y": 188
				},
				"Applications": {
					"x": 392,
					"y": 188
				}
			}
		}
	}
}